<Page
    x:Class="CSfieldSync.SyncPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CSfieldSync"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
   
    
    >

    <Grid CornerRadius="3" 
          BorderBrush="#2f5cb6"
          BorderThickness="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="VerticalAlignment" Value="Stretch" />
                <Setter Property="CornerRadius" Value="5" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="Margin" Value="10"/>
            </Style>
        </Grid.Resources>
        <!--#1f3d7a
            #2f5cb6
            #152951
        -->
        <Border Background="#D3D3D3"/>
        <Border Grid.Column ="1" Background="#E1E1E5"/>
        <Border Grid.Row="1" Grid.ColumnSpan="2" Background="#f7f7f8"/>
        <Border Grid.Row="2" Grid.ColumnSpan="2" Background="#E1E1E5"/>

        <StackPanel Grid.Column="0" Margin="10,10,0,10" HorizontalAlignment="Left">
            <TextBlock FontSize="17" FontWeight="SemiBold" Text="Sync Folders" Foreground="#2f5cb6" Margin="10,0,0,0" HorizontalAlignment="Left"/>
            <CheckBox Content="syncFoldersListBox"></CheckBox>
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="10,10,0,10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:ConnectionId='9' x:Name="addFolder" Content="Add Folder" Background="#415A77" />
            <Button x:ConnectionId='10' x:Name="selectAll" Content="Select All" Background="#778DA9" />
            <Button x:ConnectionId='11' x:Name="deleteAll" Content="Delete All" Background="#415A77" />
            <Button x:ConnectionId='12' x:Name="removeFolder" Content="Remove Folder(s)" Background="#778DA9" />

        </StackPanel>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Vertical"
        >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock Text="Sync Status: Lable 6" Foreground="#000" FontSize="18" Margin="5,0,20,0"/>
                <TextBlock Text="Upload: Lable 7" Foreground="#000" FontSize="18" Margin="0,0,10,0"/>
                <TextBlock Text="Download: CS_download Total" Foreground="#000" FontSize="18" Margin="0,0,20,0"/>
            </StackPanel>
            <StackPanel x:ConnectionId='2' x:Name="Control2" Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock x:ConnectionId='7' x:Name="ProgressLabel"  Text=" Folder Progress:" FontSize="18" Foreground="#000" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ProgressBar x:ConnectionId='8' Width="200" x:Name="folderProgress" Value="56" Foreground="#2f5cb6" Height="20" Margin="0,10,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                
                <Button x:ConnectionId='3' x:Name="btnDownload" Content="Download" Background="#2f5cb6"/>
                <Button x:ConnectionId='4' x:Name="btnUpload" Content="Upload" Background="#415A77"/>
                <Button x:ConnectionId='5' x:Name="btnAchive" Content="Achive Day Job" Background="#778DA9" />
                <Button x:ConnectionId='6' x:Name="btnExit" Content="Exit" Background="#BA181B" Foreground="#fff" Padding="8,0,8,0"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Vertical"
            HorizontalAlignment="Left">
            <TextBlock FontSize="17" FontWeight="SemiBold" Text="Logs" Foreground="#2f5cb6" 
                  Margin="10,0,0,0" HorizontalAlignment="Left"/>
                      
        </StackPanel>
    </Grid>
</Page>

