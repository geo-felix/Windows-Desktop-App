    <Grid 
        CornerRadius="3" 
          BorderBrush="#2f5cb6"
          BorderThickness="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <!--<RowDefinition Height="*"/>-->
        </Grid.RowDefinitions>
        <!--<Border Grid.Row="0" Background="#D3D3D3"/>-->
        <!--<Border Grid.Column ="1" Background="#E1E1E5"/>-->
        <Border Grid.Row="0"  Background="#f7f7f8"/>
        <Border Grid.Row="1"  Background="#E1E1E5"/>

        <StackPanel Grid.Row="0" Margin="10,10,0,0" Orientation="Vertical">
            <StackPanel HorizontalAlignment="Left" >
                <RadioButton x:Name="rtnfileserver" Content="File Server" FontSize="18"/>
                <RadioButton x:Name="rtndropbox" Content="Drop Box" FontSize="18"/>
                <RadioButton x:Name="rtnwebsite" Content="Website" FontSize="18"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="Path for device folder:________________ " Foreground="#000" FontSize="18" Margin="0,0,10,0"/>
                <TextBlock Text="Path local:____________ " Foreground="#000" FontSize="18" Margin="0,0,10,0"/>
            </StackPanel>
            <Button x:Name="btnPath" Margin="0,0,30,0" Content="Change Path" Foreground="#fff" Background="#415A77" HorizontalAlignment="Right"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="10,10,0,0" Orientation="Vertical">
            <TextBlock Text="DropBox Setting" Foreground="#000" FontSize="18" Margin="0,0,10,0"/>
            <ListBox Margin="20" Height="100">
                <StackPanel HorizontalAlignment="Center">
                    <CheckBox>Allow deletion of files in Remove from Dropbox</CheckBox>
                </StackPanel>
            </ListBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnPath1" Margin="0,0,30,0" Content="Reset Dropbox login" Background="#415A77" Foreground="#fff" HorizontalAlignment="Left"/>
                <Button x:Name="btnPath2" Margin="0,0,30,0" Content="Clear Backup" Background="#BA181B" Foreground="#fff" HorizontalAlignment="Right"/>
            </StackPanel>
            <StackPanel>
                
            </StackPanel>
        </StackPanel>
    </Grid>

